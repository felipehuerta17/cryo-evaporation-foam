FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;

    div(phi,U)      Gauss linearUpwindV grad(U);
    div(phi,T)      Gauss LUST grad(T);
    div(phi,k)      Gauss LUST grad(k);
    div(phi,omega) Gauss LUST grad(omega);
    div(phi,R)      Gauss LUST grad(R);
    div(R)          Gauss linear;
    //div(R)          Gauss upwind;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
    //div((nuEff*dev2(T(grad(U))))) Gauss upwind;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method          meshWave;
}


